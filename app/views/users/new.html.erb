<div class="container">
  <div class="columns is-multiline is-centered">
    <div class="column is-half">
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@user.errors.count, "error") %> prohibited this ingredient from being saved:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="content">
        <div class="title is-3">
          <p>Sign up</p>
        </div>
      </div>
      <%= form_with model: @user, local: true do |form| %>
        <div class="field">
          <div class="control">
            <%= form.label :username, class: "label" %>
            <%= form.text_field :username, class: "input", placeholder: "Enter your username.." %>

            <%= form.label :first_name, class: "label" %>
            <%= form.text_field :first_name, class: "input", placeholder: "Enter your first name.." %>

            <%= form.label :last_name, class: "label" %>
            <%= form.text_field :last_name, class: "input", placeholder: "Enter your last name.." %>

            <%= form.label :email, class: "label" %>
            <%= form.email_field :email, class: "input", placeholder: "Enter your email.." %>

            <%= form.label :password, class: "label" %>
            <%= form.password_field :password, class: "input", placeholder: "Enter your password.." %>

            <%= form.label :password_confirmation, class: "label" %>
            <%= form.password_field :password_confirmation, class: "input", placeholder: "Enter your password again.." %>

            <%= form.submit "Sign Up", class: "button is-info is-light" %>

            <%= link_to "Cancel", root_path, class: "button is-info is-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



