<h3><strong>Ingredients:</strong></h3>
<ul>
<div class="container">
  <div class="field">
  <%= form.fields_for :recipe_ingredients do |ingredient_form| %>
    <li>
      <div class="control">
        <div class="columns is-multiline">
          <div class="column is-half">
            <%= ingredient_form.text_area :ingredient, class: "input", placeholder: "Add ingredient.." %>
            <%= ingredient_form.check_box :_destroy, value: true, class: "checkbox" %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
  <p class="help">Check a box for deleting an ingredient.</p>
  </div>
</div>
</ul>

