<h1>Recipes</h1>

<div>
  <% if logged_in? %>
    <%= link_to "New Recipe", new_meal_recipe_path %>
    <%= link_to "Log Out", logout_path, method: :delete %>
  <% else %>
    <%= link_to "Sign In", login_path %>
    <%= link_to "Sign Up", users_signup_path %>
  <% end %>
</div>
<div class="recipes">
  <% @meal_recipes.each do |recipe| %>
    <div class="recipe">
      <h2><%= recipe.title %></h2>
      <p><%= recipe.description %></p>
      <ul class="recipe-actions">
        <li><%= link_to 'Show', meal_recipe_path(recipe[:id]) %></li>
        <li> <%= link_to 'Edit', edit_meal_recipe_path(recipe[:id]) %></li>
        <li> <%= link_to 'Delete', meal_recipe_path(recipe[:id]), data: {
          confirm: "Are you sure you want to delete this recipe?"
        }, method: :delete %></li>
      </ul>
    </div>
  <% end %>
</div>
