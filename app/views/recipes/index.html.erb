<div class="container">
  <div class="columns is-multiline is-centered">
    <div class="column is-half">
      <div class="card">
        <% @meal_recipes.each do |recipe| %>
          <header class="card-header">
            <p class="card-header-title is-centered">
              Recipe by: <%= link_to " #{recipe.user.first_name}", user_path(recipe.user.id) %>
            </p>
          </header>
          <div class="card-content">
            <p class="title">
              <%= recipe.title %>
            </p>
            <p class="subtitle">
              <%= recipe.description %>
            </p>
          </div>
          <footer class="card-footer">
            <%= link_to 'Show', meal_recipe_path(recipe[:id]), class: "card-footer-item" %>
            <% if logged_in? && same_as_current_user?(recipe.user) %>
              <%= link_to 'Edit', edit_meal_recipe_path(recipe[:id]), class: "card-footer-item" %>
              <%= link_to 'Delete', meal_recipe_path(recipe[:id]), class: "card-footer-item", data: {
                                                      confirm: "Are you sure you want to delete this recipe?"
                                                      }, method: :delete %>
            <% end %>
          </footer>
        <% end %>
      </div>
    </div>
  </div>
</div>

