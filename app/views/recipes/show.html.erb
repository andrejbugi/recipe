<div class="columns is-multiline">
  <div class="column is-half is-offset-2">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          Recipe by: <%= link_to " #{@meal_recipe.user.first_name}", user_path(@meal_recipe.user.id) %>
        </p>
      </header>
      <div class="card-content">
        <p class="title">
          <%= @meal_recipe.title %>
        </p>
        <p class="subtitle">
          Description:<br>
          <em><%= @meal_recipe.description %></em>
        </p>
        <div class="content">
          <p class="subtitle">
            Instructions:
          </p>
          <ol type="1">
            <% @meal_recipe.recipe_instructions.each do |instruction| %>
              <li>
                <%= instruction.instruction %>
                <%= link_to "Edit", edit_meal_recipe_recipe_instruction_path(@meal_recipe, instruction) %>
                <%= link_to "Delete", meal_recipe_recipe_instruction_path(@meal_recipe, instruction), data: {
                                confirm: "Are you sure you want to delete this recipe?" }, method: :delete %>
              </li>
                <%= link_to "Add instruction", new_meal_recipe_recipe_instruction_path(@meal_recipe, instruction)%>
            <% end %>
          </ol>
        </div>
        <div class="content">
          <p class="subtitle">
            Ingredients:
          </p>
          <ul>
            <% @meal_recipe.recipe_ingredients.each do |ingredient| %>
              <li>
                <%= ingredient.ingredient %>
                <%= link_to "Edit", edit_meal_recipe_recipe_ingredient_path(@meal_recipe, ingredient) %>
                <%= link_to "Delete", meal_recipe_recipe_ingredient_path(@meal_recipe, ingredient), data: {
                  confirm: "Are you sure you want to delete this recipe?" }, method: :delete %>
              </li>
                <%= link_to "Add ingredient", new_meal_recipe_recipe_ingredient_path(@meal_recipe, ingredient)%>
            <% end %>
          </ul>
        </div>
      </div>
      <footer class="card-footer">
        <%= link_to 'Home', meal_recipes_path, class: "card-footer-item" %>
        <%= link_to 'Edit', edit_meal_recipe_path(@meal_recipe[:id]), class: "card-footer-item" %>
        <%= link_to 'Delete', meal_recipe_path(@meal_recipe[:id]), class: "card-footer-item", data: {
                                                confirm: "Are you sure you want to delete this recipe?"
                                                }, method: :delete %>
      </footer>
    </div>
  </div>
</div>
