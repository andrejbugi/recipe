<h1> <%= @meal_recipe.title %> </h1>

<p> by: <%= link_to "#{@meal_recipe.user.first_name}", user_path(@meal_recipe.user.id) %> </p>

<h2>Description:</h2>
<p><%= @meal_recipe.description %></p>


<div>
  <ul class="recipe-actions">
    <li><%= link_to 'Home', meal_recipes_path %></li>
    <li> <%= link_to 'Edit', edit_meal_recipe_path(@meal_recipe[:id]) %></li>
    <li> <%= link_to 'Delete', meal_recipe_path(@meal_recipe[:id]), data: {
      confirm: "Are you sure you want to delete this recipe?" }, method: :delete %></li>
  </ul>
</div>

<h2> Instructions: </h2>
<div class="content">
  <ol type="1">
    <% @meal_recipe.recipe_instructions.each do |instruction| %>
      <li>
        <%= instruction.instruction %>
        <%= link_to "edit instruction", edit_meal_recipe_recipe_instruction_path(@meal_recipe, instruction)%>
        <%= link_to "delete instruction", meal_recipe_recipe_instruction_path(@meal_recipe, instruction), data: {
          confirm: "Are you sure you want to delete this recipe?" }, method: :delete %>
      </li>
    <%= link_to "add new instruction", new_meal_recipe_recipe_instruction_path(@meal_recipe, instruction)%>
    <% end %>
  </ol>
</div>

<h2> Ingredients: </h2>
<div class="content">
  <ul>
    <% @meal_recipe.recipe_ingredients.each do |ingredient| %>
      <li>
        <%= ingredient.ingredient %>
        <%= link_to "edit ingredient", edit_meal_recipe_recipe_ingredient_path(@meal_recipe, ingredient)%>
        <%= link_to "delete ingredient", meal_recipe_recipe_ingredient_path(@meal_recipe, ingredient), data: {
          confirm: "Are you sure you want to delete this recipe?" }, method: :delete %>
      </li>
    <%= link_to "add new ingredient", new_meal_recipe_recipe_ingredient_path(@meal_recipe, ingredient)%>
    <% end %>
  </ul>
</div>
